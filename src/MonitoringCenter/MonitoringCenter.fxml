<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MonitoringCenter.MonitoringCenterController">
   <children>
      <VBox>
         <children>
            <HBox minHeight="300.0" minWidth="200.0">
               <children>
                  <VBox alignment="CENTER" minWidth="400.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Local Server List">
                           <VBox.margin>
                              <Insets bottom="15.0" top="15.0" />
                           </VBox.margin>
                        </Text>
                        <TableView fx:id="lsTable" minWidth="400.0" prefHeight="200.0" prefWidth="200.0">
                           <columns>
                              <TableColumn fx:id="lsNameCol" minWidth="100.0" prefWidth="75.0" text="Name" />
                              <TableColumn fx:id="lsLocationCol" minWidth="100.0" prefWidth="75.0" text="Location" />
                           </columns>
                        </TableView>
                        <HBox alignment="CENTER" minWidth="50.0">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                           <children>
                              <Button fx:id="viewStationsBTN" minWidth="125.0" mnemonicParsing="false" onAction="#ViewStations" text="View Stations">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin>
                              </Button>
                              <Button fx:id="getReadingBtn2" layoutX="71.0" layoutY="10.0" minWidth="125.0" mnemonicParsing="false" onAction="#getReading" text="Get Reading">
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin></Button>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" minWidth="400.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Monitoring Stations">
                           <VBox.margin>
                              <Insets bottom="15.0" top="15.0" />
                           </VBox.margin>
                        </Text>
                        <TableView fx:id="msTable" minWidth="400.0" prefHeight="200.0" prefWidth="200.0">
                           <columns>
                              <TableColumn fx:id="msNameCol" minWidth="100.0" prefWidth="75.0" text="Name" />
                              <TableColumn fx:id="msLocationCol" minWidth="100.0" prefWidth="75.0" text="Location" />
                              <TableColumn fx:id="msStatusCol" minWidth="98.0" prefWidth="75.0" text="Status" />
                           </columns>
                        </TableView>
                        <HBox alignment="CENTER" minWidth="50.0">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                           <children>
                              <Button fx:id="enableBtn" minWidth="125.0" mnemonicParsing="false" onAction="#enable" text="Enable">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin>
                              </Button>
                              <Button fx:id="disableBtn" layoutX="71.0" layoutY="10.0" minWidth="125.0" mnemonicParsing="false" onAction="#disable" text="Disable">
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin></Button>
                           </children>
                           <padding>
                              <Insets top="10.0" />
                           </padding>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER" layoutX="230.0" layoutY="10.0" minWidth="400.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Registered Agencies">
                           <VBox.margin>
                              <Insets bottom="15.0" top="15.0" />
                           </VBox.margin>
                        </Text>
                        <TableView fx:id="agencyTable" minWidth="400.0" prefHeight="200.0" prefWidth="400.0">
                           <columns>
                              <TableColumn fx:id="aNameCol" minWidth="100.0" prefWidth="75.0" text="Name" />
                              <TableColumn fx:id="aLocationCol" minWidth="100.0" prefWidth="75.0" text="Location Of Interest" />
                              <TableColumn fx:id="aContactInfoCol" minWidth="98.0" prefWidth="75.0" text="Contact Info" />
                           </columns>
                        </TableView>
                     </children>
                     <HBox.margin>
                        <Insets bottom="40.0" />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
            <VBox alignment="CENTER" prefHeight="200.0">
               <children>
                  <Text fx:id="readingsTitle" strokeType="OUTSIDE" strokeWidth="0.0" text="View Readings">
                     <VBox.margin>
                        <Insets bottom="15.0" top="15.0" />
                     </VBox.margin>
                  </Text>
                  <TableView fx:id="readingsTable" minHeight="300.0" prefHeight="200.0" prefWidth="200.0">
                     <columns>
                        <TableColumn fx:id="stationNameCol" minWidth="200.0" prefWidth="75.0" text="Name" />
                        <TableColumn fx:id="readingCol" minWidth="200.0" prefWidth="75.0" text="Reading" />
                        <TableColumn fx:id="dateCol" minWidth="250.0" prefWidth="75.0" text="Date" />
                        <TableColumn fx:id="timeCol" minWidth="210.0" prefWidth="75.0" text="Time" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets left="50.0" right="50.0" />
         </padding>
      </VBox>
   </children>
   <padding>
      <Insets bottom="50.0" top="50.0" />
   </padding>
</StackPane>
